                <http:uri-param paramName="id" value="#[1234]"/>
            </http:request-builder>
        </http:request>
        <mock:verify-call messageProcessor="mule:sub-flow" times="1" doc:name="Verify Call">
            <mock:with-attributes>
                <mock:with-attribute name="name" whereValue="#[matchContains('deleteServiceOrderById')]"/>
            </mock:with-attributes>
        </mock:verify-call>
    </munit:test>
    <munit:test name="FuntionalTest-GivenARequestWhenDeleteByIdAServiceOrderThenGetIdFromURI" description="FuntionalTest-GivenARequestWhenDeleteByIdAServiceOrderThenGetIdFromURI">
        <mock:spy messageProcessor="mule:sub-flow" doc:name="Spy-deleteServiceOrderById-Call">
            <mock:with-attributes>
                <mock:with-attribute name="name" whereValue="#[matchContains('deleteServiceOrderById')]"/>
            </mock:with-attributes>
            <mock:assertions-before-call>
                <munit:assert-on-equals expectedValue="#['1234']" actualValue="#[flowVars.orderId]" doc:name="Assert Equals for expected URI order id"/>
